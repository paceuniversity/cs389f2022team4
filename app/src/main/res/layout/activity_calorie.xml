<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.example.kirinrecipe.CalorieActivity">

    <TextView
        android:id="@+id/tip_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_margin="12dp"
        android:gravity="center|left"
        android:text="Please enter the calorie intake of the day, the maximum is 10000"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button_with"
        app:layout_constraintTop_toBottomOf="@+id/tip_Tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center|left"
        android:hint="calorie"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:digits="0123456789"
        android:maxLength="4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ok_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_view"
        android:layout_marginTop="10dp"
        android:text="ok"
        android:gravity="center"
        android:onClick="onBtnClick"
        android:background="@color/white"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/ok_tv"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toBottomOf="@+id/progressbar"
        android:layout_marginTop="2dp"
        android:text="0/10000"
        android:gravity="center|right"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>