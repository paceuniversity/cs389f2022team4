<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:typeface="serif"
    tools:context=".PKwithus"
    >

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.4"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
          android:id="@+id/developer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:background="@color/Themecolor5"
          android:gravity="center"
          android:text=" Developed by:   "
          android:textColor="@color/white"
          android:textSize="25dp"
          android:textStyle="bold|italic"
          android:typeface="serif"
           />

  </LinearLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.5"
      android:gravity="center"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/zhangkuan" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/xiaofeng" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/zhifuchen" />
  </LinearLayout>

  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text=" Kuan Zhang "
            android:background="@drawable/underline2"
            android:typeface="serif"
             />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:background="@drawable/underline2"
            android:text=" Xiaofeng Leng "
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/underline2"
            android:text=" Zhifu Chen "
            android:typeface="serif" />


    </LinearLayout>




  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.5"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
          android:id="@+id/textView7"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:background="@color/Themecolor5"
          android:gravity="center"
          android:text=" Contact information:"
          android:textColor="@color/white"
          android:textSize="25dp"
          android:textStyle="bold|italic"
          android:typeface="serif" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
          android:id="@+id/textView8"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:gravity="center"
          android:text=" czhifu1@gmail.com \n\n\n klaokchn@163.com \n\n\n 1344706949@qq.com\n\n\n"
          android:textSize="20sp"
          android:typeface="serif" />
  </LinearLayout>

</LinearLayout>